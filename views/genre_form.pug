extends layout

block content
  .container
    h1= title

    form(method='POST')
      .form-group
        label(for='name') Genre:
        input#name.form-control(
          type='text',
          name='name',
          placeholder='Fantasy, Poetry etc.',
          required,
          value=(typeof genre !== 'undefined' ? genre.name : '')
        )

      button.btn.btn-primary(type='submit') Submit

    if errors
      ul.text-danger.mt-3
        each error in errors
          li= error.msg
